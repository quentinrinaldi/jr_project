{% extends "base.html.twig" %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}


  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/client_website/css/profile.css') }}" />
  {% endblock %}

  {% block body_content %}
    <div class="container main-container">
      
     <div class="row">
      <div class="col-md-3">
        <div class="panel panel-default panel-menu">
          <div class="panel-heading">
            <h3 class="panel-title">Mon profil</h3>
          </div>
          <div class="panel-body">
            <ul class="nav nav-pills nav-stacked">
              <li class="active" role="presentation">
                <a href="{{ path('fos_user_profile_show') }}">Editer mes informations</a>
              </li>
              <li role="presentation">
                <a href="{{ path('fos_user_change_password') }}">Changer mon mot de passe</a>
              </li>
              <li role="presentation">
                <a href="{{ path('registration_requests_overview') }}">Mes inscriptions</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <!-- edit form column -->
      <div class="col-md-7 personal-info">
        <h1>Mes informations</h1>
        <hr>
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">×</a> 
          <i class="fa fa-coffee"></i>
          <strong>Attention :</strong> Le changement de votre adresse mail nécessite une nouvelle vérification de celle ci.
        </div>
        
        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
        {{ form_widget(form) }}
        <div>
         <input class="btn btn-primary" value="Sauvegarder les changements" type="submit">
       </div>
       {{ form_end(form) }}
     </div>
   </div>
 </div>
 <hr> 


{% endblock %}
