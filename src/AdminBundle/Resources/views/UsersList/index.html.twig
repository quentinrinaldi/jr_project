{% extends 'AdminBundle:Home:base.html.twig' %}

{% block stylesheets %} 
<link rel="stylesheet" href="{{ asset('assets/shared_assets/css/jquery.dataTables.min.css') }}" />
{% endblock %}

{% block body_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Gestion des utilisateurs 
            </h1>

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <table id="users_table" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Adresse Mail</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Téléphone</th>
                <th>Date d'inscription</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                {{ include('AdminBundle:UsersList:user_partial.html.twig', { 'user' : user }) }}
            {% endfor %}
        </tbody>
        <!-- /.row -->
    {% endblock %}


    {% block scripts %} 
        <script src="{{ asset('assets/shared_assets/js/jquery.dataTables.min.js') }}"></script>
        <script>
        $(document).ready(function() {
            $('#users_table').DataTable({
                "language": {
                    "lengthMenu": "Afficher _MENU_ dates par page",
                    "info": "Page _PAGE_/_PAGES_",
                    "emptyTable": "Aucune demande d'inscription n'est présente dans la base",
                    "infoEmpty": "",
                    "paginate": {
                        "first":      "Première page",
                        "last":       "Dernière page",
                        "next":       "Suivant",
                        "previous":   "Précédent"
                    }
                },
                "bFilter": true,

            });
        } );
    </script>
    {% endblock %}