{% extends 'AdminBundle:Home:base.html.twig' %}

{% block stylesheets %} 
    <link rel="stylesheet" href="{{ asset('assets/shared_assets/css/jquery.dataTables.min.css') }}" />
{% endblock %}

{% block body_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Les fichiers uploadés 
            <div class="action-button">
                <a class="btn btn-primary btn-lg" role="button" href="{{path('add_upload') }}">Ajouter un fichier</a>
            </div>
        </h1>
    </div>
</div>
<table id="recordings_table" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Nom du fichier</th>
            <th>url</th>  
            <th>Date d'ajout</th>
            <th>Action</th>
            <th>Commentaire</th>
        </tr>
    </thead>
    <tbody>
        {% for upload in uploads %}
            {{ include('AdminBundle:Upload:upload.html.twig', { 'upload' : upload }) }}
        {% endfor %}
    </tbody>
{% endblock %}

{% block scripts %} 
    <script src="{{ asset('assets/shared_assets/js/jquery.dataTables.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#recordings_table').DataTable({
                "language": {
                    "url": "{{ asset('assets/shared_assets/tools/French.json') }}",
                    "sZeroRecords" : "Aucun fichier n'a été uploadé à l'aide de cette outil.",
                    "sEmptyTable" : "Aucun fichier n'a été uploadé à l'aide de cette outil."   
                },
                "bFilter": false,

            });
        } );
    </script>
{% endblock %}