{% extends 'AdminBundle:Home:base.html.twig' %}

{% block stylesheets %} 
    <link rel="stylesheet" href="{{ asset('assets/shared_assets/css/jquery.dataTables.min.css') }}" />
{% endblock %}

{% block body_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Historique des tournages 
            </h1>
        </div>
    </div>

    <table id="past_recordings_table" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Emission</th>
                <th>Date</th>
                <th>Horaires</th>
                <th>Information</th>
                <th>Inscription</th>
            </tr>
        </thead>
        <tbody>
            {% for recording in pastRecordings %}
                {{ include('AdminBundle:Recording:history_partial.html.twig', { 'recording' : recording }) }}
            {% endfor %}
        </tbody>
    </table>
    <!-- /.row -->
{% endblock %}


{% block scripts %} 
    <script src="{{ asset('assets/shared_assets/js/jquery.dataTables.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#past_recordings_table').DataTable({
                "language": {
                    "url": "{{ asset('assets/shared_assets/tools/French.json') }}",
                    "sZeroRecords" : "Aucun tournage n'a encore été enregistré pour cette émission.",
                    "sEmptyTable" : "Aucun tournage n'a encore été enregistré pour cette émission."
                },
                "bFilter": true,
            });
        } );
    </script>
{% endblock %}