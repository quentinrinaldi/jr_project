{% extends 'AdminBundle:Home:base.html.twig' %}

{% block stylesheet%} 
<link rel="stylesheet" type="text/css" href="{{ asset('assets/css/adminBundle_tvShows.css') }}"/>
{% endblock %}

{% block body_content %}

    <!-- Page Content -->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Sélectionnez une émission 
            </h1>

        </div>
    </div>
    {% for tvShow in tvShows %}
        <a href="{{ path('show_registration_requests', {tvshowID: tvShow.id}) }}">
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{ tvShow.title }}

                </div>
                <div class="panel-body">
                 <img src="{{ asset('uploads/' ~ tvShow.iconeName) }}" class="center-block thumbnail-img"></img> 
             </div>
         </div>
     </div>
 </a>

{% endfor %}


<!-- /.row -->
{% endblock %}