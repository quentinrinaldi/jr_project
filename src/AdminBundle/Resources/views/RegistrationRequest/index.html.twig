{% extends 'AdminBundle:Home:base.html.twig' %}

{% block body_content %}

    <!-- Page Content -->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Gestion des inscriptions 
            </h1>

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <table id="recordings_table" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Adresse Mail</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de la demande</th>
                <th>Emission</th>
                <th>Tournage</th>
                <th>Nombre de places</th>
                <th>Statut</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for regRequest in regRequests %}
                {{ include('AdminBundle:RegistrationRequest:registration_request_partial.html.twig', { 'regRequest' : regRequest }) }}
            {% endfor %}
        </tbody>
        <!-- /.row -->
    {% endblock %}


    {% block scripts %} 
        <script>
        $(document).ready(function() {
            $('#recordings_table').DataTable({
                "language": {
                    "lengthMenu": "Afficher _MENU_ dates par page",
                    "info": "Page _PAGE_/_PAGES_",
                    "infoEmpty": "Aucune date n'est actuellement prévue",
                    "paginate": {
                        "first":      "Première page",
                        "last":       "Dernière page",
                        "next":       "Suivant",
                        "previous":   "Précédent"
                    }
                },
                "bFilter": false,

            });
        } );
    </script>
    {% endblock %}