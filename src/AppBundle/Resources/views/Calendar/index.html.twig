                            <th>Heure de début</th>
                            <th>Heure de fin</th>
                            <th>Condition</th>
                            <th>Inscription</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for recording in recordings %}
                            {{ include('AppBundle:Calendar:calendar_recording_partial.html.twig', { 'recording' : recording }) }}
                        {% endfor %}

                        
                    </tbody>
                </table>

        </div>
    </div>

        {% endblock %}

