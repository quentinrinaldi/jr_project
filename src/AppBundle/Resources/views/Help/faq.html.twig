{% extends "base.html.twig" %}

{% block body_content %}

    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Foire Aux Questions
                    <small>(FAQ)</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a>
                    </li>
                    <li class="active">FAQ</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-group" id="accordion">
                    {% set count = 0 %}
                    {% for questionAnswer in questionAnswers %}
                        {{ include('AppBundle:Help:faq_item.html.twig', { 'questionAnswer' : questionAnswer, 'count' : count }) }}
                        {% set count = count + 1 %}
                    {% endfor %}
                </div>
                <!-- /.panel-group -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    {% endblock %}